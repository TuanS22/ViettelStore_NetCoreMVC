@{
    // import file Layout.cshtml vào đây
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}

@{
    string _Name = Model != null ? Model.Name : "";
    string _Email = Model != null ? Model.Email : "";
}

<div class="col-md-12">
    @if (!String.IsNullOrEmpty(Context.Request.Query["notify"]))
    {
        <div class="alert alert-danger">Email đã tồn tại</div>
    }
    <div class="panel panel-primary">
        <div class="panel-heading" style="font-size: 1.5rem;">Add edit user</div>
        <div class="panel-body">
            <form method="post" action="@ViewBag.action">
                <!-- rows -->
                <div class="row" style="margin: 10px 0;">
                    <div class="col-md-2" style="font-size: 1.5rem;">Name</div>
                    <div class="col-md-10">
                        <input style="font-size: 1.5rem;" type="text" value="@_Name" name="Name" class="form-control">
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin: 10px 0;">
                    <div class="col-md-2" style="font-size: 1.5rem;">Email</div>
                    <div class="col-md-10">
                        <input style="font-size: 1.5rem;" type="email" value="@_Email" name="Email" class="form-control" required>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin: 10px 0;">
                    <div class="col-md-2" style="font-size: 1.5rem;">Password</div>
                    <div class="col-md-10">
                        <input style="font-size: 1.5rem;" type="password" name="password" class="form-control"
                        @(Model != null ? "placeholder='Không đổi password thì không nhập thông tin vào ô textbox này'" : "")>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin: 10px 0;">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <input type="submit" value="Process" class="btn btn-primary">
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin: 10px 0; font-size: 1.5rem; text-align: right;">
                    <div class="col-md-2" style="font-size: 1.5rem;"></div>
                    <div class="col-md-10">
                        <a href="/Admin/Users/Read">Quay lại</a>
                    </div>
                </div>
                <!-- end rows -->
            </form>
        </div>
    </div>
</div>