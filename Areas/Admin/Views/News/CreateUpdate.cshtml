@{
    //import file Layout.cshtml vào đây
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@using viettel_store.Models

<!-- Để load ckeditor vào trang thì phải có dòng dưới đây-->
<script src="https://cdn.ckeditor.com/ckeditor5/40.0.0/classic/ckeditor.js"></script>
<div class="col-md-12">
    <div class="panel panel-primary">
        <div class="panel-heading">Add edit news</div>
        <div class="panel-body">
            @* autocomplete="off" sẽ bỏ các thông tin catche của trình duyệt lưu vào ô textbox *@
            @*Muốn upload được file thì trong thẻ form phải có thuộc tính sau: enctype="multipart/form-data"*@
            <form method="post" action="@ViewBag.action" enctype="multipart/form-data" autocomplete="off">
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2" style="font-size: 1.5rem;">Name</div>
                    <div class="col-md-10">
                        <input style="font-size: 1.5rem;" type="text" value="@if(Model != null){}" name="Name" class="form-control" required>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <input type="checkbox" @if(Model != null && Model.Hot == 1){<text>checked</text>} name="Hot"> Hot
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2" style="font-size: 1.5rem;">Photo</div>
                    <div class="col-md-10">
                        <input type="file" name="Photo">
                    </div>
                </div>
                <!-- end rows -->
                <!-- fix do rong cua ckeditor -->
                <style>
                    .ck-editor__editable {
                        min-height: 300px;
                        max-height: 300px;
                        overflow: scroll;
                    }
                </style>
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2" style="font-size: 1.5rem;">Description</div>
                    <div class="col-md-10">
                        <textarea name="Description" id="Description">@if (Model != null)
                            {
                                <text>@Model.Description</text>
                            }</textarea>
                        <script style="font-size: 1.5rem;">
                            ClassicEditor
                                .create(document.querySelector('#Description'))
                                .catch(error => {
                                    console.error(error);
                                });
                        </script>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2" style="font-size: 1.5rem;">Content</div>
                    <div class="col-md-10">
                        <textarea name="Content" id="Content">@if (Model != null)
                            {
                                <text>@Model.Content</text>
                            }</textarea>
                        <script style="font-size: 1.5rem;">
                            ClassicEditor
                                .create(document.querySelector('#Content'))
                                .catch(error => {
                                    console.error(error);
                                });
                        </script>
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin-top:5px;">
                    <div class="col-md-2"></div>
                    <div class="col-md-10">
                        <input type="submit" value="Process" class="btn btn-primary">
                    </div>
                </div>
                <!-- end rows -->
                <!-- rows -->
                <div class="row" style="margin: 10px 0; font-size: 1.5rem; text-align: right;">
                    <div class="col-md-2" style="font-size: 1.5rem;"></div>
                    <div class="col-md-10">
                        <a href="/Admin/News/Read">Quay lại</a>
                    </div>
                </div>
                <!-- end rows -->
            </form>
        </div>
    </div>
</div>