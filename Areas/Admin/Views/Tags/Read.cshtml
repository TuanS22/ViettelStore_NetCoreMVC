@{
    //load file Layout.cshtml vao day
    Layout = "~/Areas/Admin/Views/Shared/Layout.cshtml";
}
@* de phan trang thi phai using cac doi tuong sau *@
@using X.PagedList
@using X.PagedList.Mvc.Core
@using viettel_store.Models
@functions{
    MyDbContext db = new MyDbContext();
}
<div class="col-md-12">
    <div style="margin-bottom:5px;">
        <a href="/Admin/Tags/Create" class="btn btn-primary">Add tags</a>
    </div>
    <div class="panel panel-primary">
        <div class="panel-heading">List Tag</div>
        <div class="panel-body">
            <table class="table table-bordered table-hover">
                <tr>
                    <th>Name</th>
                    <th style="width:100px; text-align: center;">Action</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td style="text-align:center;">
                            <a href="/Admin/Tags/Update/@item.Id"><i class="bi bi-tools" style="padding: 5px;"></i></a>&nbsp;
                            <a href="/Admin/Tags/Delete/@item.Id" onclick="return window.confirm('Are you sure?');"><i class="bi bi-trash" style="padding: 5px;"></i></a>
                        </td>
                    </tr>
                }
            </table>
            <style type="text/css">
                .pagination {
                    padding: 0px;
                    margin: 15px 0;
                }
            </style>
            @* ham sau se thuc hien viec hien thi phan trang *@
            @Html.PagedListPager((IPagedList)Model, p => Url.Action("Read", new { page = p }))
        </div>
    </div>
</div>